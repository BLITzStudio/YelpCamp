<% layout("layout/boilerplate") %>

<div class="row mb-3">
  <h1 class="text-center mb-3">Edit campground</h1>
  <div class="col-6 offset-3">
    <form
      class="validationRequired"
      action="/campgrounds/<%=foundData.id%>?_method=PATCH "
      method="post"
      novalidate
    >
      <div class="form-group mb-3">
        <label class="form-label" for="name">The new location name</label>
        <input
          required
          class="form-control"
          type="text"
          name="name"
          id="name"
          value="<%= foundData.name %>"
        />
      </div>
      <div class="form-group mb-3">
        <label class="form-label" for="location">The location</label>
        <input
          required
          class="form-control"
          type="text"
          name="location"
          id="location"
          value="<%= foundData.location %>"
        />
      </div>
      <div class="form-group mb-3">
        <label class="form-label" for="image">Image link</label>
        <input
          required
          class="form-control"
          type="text"
          name="image"
          id="price"
          value="<%= foundData.image %>"
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="price">Price</label>
        <div class="input-group mb-3">
          <div class="input-group-prepend">
            <span class="input-group-text">$</span>
          </div>
          <input
            required
            id="price"
            name="price"
            type="number"
            class="form-control"
            aria-label="Amount (to the nearest dollar)"
            placeholder="0.00"
            min="0"
            value="<%= foundData.price%>"
          />
        </div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="description">Description</label>
        <textarea
          name="description"
          id="description"
          cols="30"
          rows=""
          class="form-control"
          type="text"
        >
 <%= foundData.description%></textarea
        >
      </div>

      <button class="btn btn-primary" type="submit">Submit</button>
      <a class="btn btn-primary" href="/campgrounds">Home</a>
    </form>
  </div>
</div>
<script>
  var forms = document.querySelectorAll(".validationRequired");
  Array.prototype.slice.call(forms).forEach(function (form) {
    form.addEventListener(
      "submit",
      function (event) {
        if (!form.checkValidity()) {
          event.preventDefault();
          event.stopPropagation();
        }

        form.classList.add("was-validated");
      },
      false
    );
  });
</script>
