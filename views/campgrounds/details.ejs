<% layout("layout/boilerplate") %>

<!-- <h1>Name: <%= foundData.name %></h1>
<h2>Location: <%= foundData.location %></h2> -->
<div class="col-6 offset-3">
  <div class="row">
    <div class="card">
      <img
        class="card-img-top"
        src="<%=foundData.image%> "
        alt="Card image cap"
      />
      <div class="card-body">
        <h5 class="card-title"><%=foundData.name%></h5>
        <p class="card-text"><%=foundData.description%></p>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item">Location: <%=foundData.location%></li>
        <li class="list-group-item">Price: <%=foundData.price%></li>
      </ul>
      <div class="card-body">
        <form
          action="/campgrounds/<%= foundData.id %>?_method=DELETE"
          method="post"
        >
          <a
            href="/campgrounds/<%=foundData.id%>/edit"
            class="card-link btn btn-primary my-2"
            >Go and Edit</a
          >
          <button class="btn btn-primary d-inline" type="submit">
            Delete campground
          </button>
        </form>
      </div>
    </div>
  </div>
</div>
