<% layout("layout/boilerplate") %>

<h1>All Campgrounds</h1>
<div>
  <a href="/campgrounds/new">Add Campground</a>
</div>
<ul>
  <% for (let data of foundData){%>
  <div class="card m-3">
    <div class="row">
      <img class="img-fluid col-4" src="<%= data.image %> " alt="" />
      <div class="col-8">
        <div class="card-body">
          <div class="card-title"><%= data.name %></div>
          <div class="card-text"><%= data.description %></div>
          <small class="card-text text-muted"><%= data.location %> </small>
          <div>
            <a
              class="btn btn-primary mt-3"
              href="/campgrounds/<%= data.id %>/details "
              >Details</a
            >
          </div>
        </div>
      </div>
    </div>
  </div>
  <% }%>
</ul>
