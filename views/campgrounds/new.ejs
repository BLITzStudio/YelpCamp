<% layout("layout/boilerplate") %>

<div class="row mb-3">
  <h1 class="text-center">New Campground</h1>
  <div class="col-6 offset-3">
    <form action="/campgrounds" method="post">
      <div class="form-group mb-3">
        <label class="form-label" for="name">The new location name</label>
        <input class="form-control" type="text" name="name" id="name" />
      </div>
      <div class="form-group mb-3">
        <label class="form-label" for="location">The location</label>
        <input class="form-control" type="text" name="location" id="location" />
      </div>
      <div class="form-group mb-3">
        <label class="form-label" for="image">Image link</label>
        <input class="form-control" type="text" name="image" id="price" />
      </div>
      <div class="mb-3">
        <label class="form-label" for="price">Price</label>
        <div class="input-group mb-3">
          <div class="input-group-prepend">
            <span class="input-group-text">$</span>
          </div>
          <input
            id="price"
            name="price"
            type="number"
            class="form-control"
            aria-label="Amount (to the nearest dollar)"
            placeholder="0.00"
            min="0"
          />
        </div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="description">Description</label>
        <textarea
          name="description"
          id="description"
          cols="30"
          rows=""
          class="form-control"
          type="text"
        ></textarea>
      </div>

      <button class="btn btn-primary" type="submit">Submit</button>
      <a class="btn btn-primary" href="/campgrounds">Home</a>
    </form>
  </div>
</div>
